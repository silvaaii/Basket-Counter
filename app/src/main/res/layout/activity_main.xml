<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d5aee9"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.samsung.basketcounter.MainActivity">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/teamA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:textSize="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:textColor="#FF4081"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/score_teamA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="50dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="25dp"/>
            <Button
                android:onClick="threePointsA"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="+3 Point"
                android:textSize="15dp"/>
            <Button
                android:onClick="twoPointsA"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="+2 Point"
                android:textSize="15dp"/>
            <Button
                android:onClick="freeThrowA"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Free Throw"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/teamB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textSize="20dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="20dp"
                android:textColor="#FF4081"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/score_teamB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="50dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal"/>
            <Button
                android:onClick="threePointsB"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="20dp"
                android:text="+3 Point"
                android:textSize="15dp"
                android:layout_gravity="center_horizontal"/>
            <Button
                android:onClick="twoPointsB"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="5dp"
                android:text="+2 Point"
                android:textSize="15dp"
                android:layout_gravity="center_horizontal"/>
            <Button
                android:onClick="freeThrowB"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="5dp"
                android:text="Free Throw"
                android:textSize="15dp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:onClick="reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:layout_marginLeft="120dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="140dp"
                />
        </RelativeLayout>



    </RelativeLayout>
</RelativeLayout>


